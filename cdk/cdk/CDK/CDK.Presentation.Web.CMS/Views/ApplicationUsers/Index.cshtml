@model IEnumerable<CDK.Presentation.Web.CMS.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Index</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>ApplicationUser</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of ApplicationUser</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Create New", "Create", null, new
                   {
                       @class = "btn btn-primary btn-xs"
                   })
                    </div>
                </div>
                <div class="ibox-content">
                    <input type="text" class="form-control input-sm m-b-xs" id="filter"
                           placeholder="Search in table">
                    <table class="footable table table-stripped" data-page-size="8" data-filtering="true" data-filter=#filter>
                        <tr>

                            <th>
                                Username
                            </th>
                            <th>
                                Email
                            </th>

                            <th>
                                Phone Number
                            </th>
                            <th>
                                Lockout End Date
                            </th>
                            <th>
                                Lockout Enabled
                            </th>
                            <th>
                                Access Failed Count
                            </th>
                            <th data-sort-ignore="true"></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LockoutEndDateUtc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LockoutEnabled)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AccessFailedCount)
                                </td>
                                <td>
                                    @if (this.User.IsInRole("SuperAdmin"))
                                    {
                                        if (!item.IsDefault)
                                        {
                                            @Html.ActionLink("Details", "Details", new
                                       {
                                           id = item.Id
                                       }, new
                                       {
                                           @class = "btn btn-primary btn-sm"
                                       })
                                            @Html.ActionLink("Edit", "Edit", new
                                       {
                                           id = item.Id
                                       }, new
                                       {
                                           @class = "btn btn-white btn-sm"
                                       })
                                            @Html.ActionLink("Delete", "Delete", new
                                       {
                                           id = item.Id
                                       }, new
                                       {
                                           @class = "btn btn-white btn-sm"
                                       })
                                        }
                                    }

                                </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    @Styles.Render("~/plugins/footableStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/footable")

    <script type="text/javascript">
        $(document).ready(function () {

            $('.footable').footable();

        });
    </script>
}