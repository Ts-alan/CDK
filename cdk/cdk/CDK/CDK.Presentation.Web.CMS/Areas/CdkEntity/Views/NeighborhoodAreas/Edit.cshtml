@model CDK.Presentation.Web.CMS.Areas.CdkEntity.Models.NeighborhoodArea

@{
    ViewBag.Title = "Edit";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Edit</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("List", "Index")
            </li>
            <li class="active">
                <strong>Edit</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Back to List", "Index", null, new
       {
           @class = "btn btn-primary"
       })
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Edit NeighborhoodArea</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.Id)

                            <div class="form-group">
                                @Html.LabelFor(model => model.MetroAreaId, "MetroAreaId", new
                           {
                               @class = "control-label col-md-2"
                           })
                                <div class="col-md-10">
                                    @Html.DropDownList("MetroAreaId", String.Empty)
                                    @Html.ValidationMessageFor(model => model.MetroAreaId)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, new
                           {
                               @class = "control-label col-md-2"
                           })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Name)
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ShortName, new
                           {
                               @class = "control-label col-md-2"
                           })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.ShortName)
                                    @Html.ValidationMessageFor(model => model.ShortName)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Description, new
                           {
                               @class = "control-label col-md-2"
                           })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Description)
                                    @Html.ValidationMessageFor(model => model.Description)
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.CenterPointLat, new
                           {
                               @class = "control-label col-md-2"
                           })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CenterPointLat)
                                    @Html.ValidationMessageFor(model => model.CenterPointLat)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.CenterPointLon, new
                           {
                               @class = "control-label col-md-2"
                           })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CenterPointLon)
                                    @Html.ValidationMessageFor(model => model.CenterPointLon)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.CoordinatesAsText, new
                           {
                               @class = "control-label col-md-2"
                           })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CoordinatesAsText)
                                    @Html.ValidationMessageFor(model => model.CoordinatesAsText)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NeighborhoodAreaUri, new
                           {
                               @class = "control-label col-md-2"
                           })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.NeighborhoodAreaUri)
                                    @Html.ValidationMessageFor(model => model.NeighborhoodAreaUri)
                                </div>
                            </div>
                            @Html.Partial("_SeoEdit", Model)
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                    @Html.ActionLink("Cancel", "Index", null, new
                               {
                                   @class = "btn btn-white"
                               })
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
}