@model IEnumerable<CDK.Presentation.Web.CMS.Areas.CdkEntity.Models.Developer>

@{
    ViewBag.Title = "Developers";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Developers</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>Developer</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of Developer</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Create New", "Create", null, new
                   {
                       @class = "btn btn-primary btn-xs"
                   })
                    </div>
                </div>
                <div class="ibox-content">
                    <input type="text" class="form-control input-sm m-b-xs" id="filter"
                           placeholder="Search in table">
                    <table class="footable table table-stripped" data-page-size="8" data-filtering="true" data-filter=#filter>
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PrimaryContactName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Created)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreatedBy)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LastUpdate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LastUpdateBy)
                                </th>
                                <th data-sort-ignore="true">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PrimaryContactName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Created)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedBy)
                                    </td>
                                    <td>
                                        @if (item.LastUpdate != new DateTime())
                                        {
                                            @Html.DisplayFor(modelItem => item.LastUpdate)
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastUpdateBy)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Details", "Details", new
                                   {
                                       id = item.Id
                                   }, new
                                   {
                                       @class = "btn btn-primary btn-sm"
                                   })
                                        @Html.ActionLink("Edit", "Edit", new
                                   {
                                       id = item.Id
                                   }, new
                                   {
                                       @class = "btn btn-white btn-sm"
                                   })
                                        @Html.ActionLink("Delete", "Delete", new
                                   {
                                       id = item.Id
                                   }, new
                                   {
                                       @class = "btn btn-white btn-sm"
                                   })
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="hide-if-no-paging">
                            <tr>
                                <td colspan="5">
                                    <ul class="pagination pull-right"></ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/plugins/footableStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/footable")

    <script type="text/javascript">
        $(document).ready(function () {

            $('.footable').footable();

        });
    </script>
}